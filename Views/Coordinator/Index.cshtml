@model IEnumerable<Coordinator>

@{
    ViewData["Title"] = "Coordinators";
}

<div class="container py-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

   <div class="row justify-content-center">
        <div class="col-md-6 mb-4 mt-3">
            <a asp-action="Create" class="text-decoration-none">
                <div class="card shadow" style="height: 100%;">
                    <div class="card-body text-center d-flex align-items-center justify-content-center">
                        <div>
                            <i class="fas fa-plus fa-2x"></i>
                            <p class="mt-2">Add New Coordinator</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>



    @foreach (var item in Model)
    {
        <div class="col-md-6 mb-4 mt-3">
            <div class="card shadow">
                <div class="card-header">
                    <a asp-action="Details" asp-route-id="@item.Id"><h3 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h3></a>
                </div>
                <div class="card-body">
                    <div class="overflow" style="max-height: 300px;">
                        <dl class="row">
                            <dt class="col-sm-5">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(modelItem => item.PhoneNumber)</dd>
                            <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Mail)</dt>
                            <dd class="col-sm-7">@Html.DisplayFor(modelItem => item.Mail)</dd>
                       </dl>
                    </div>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Delete</a>
                </div>
                
                    
                
                
            </div>
        </div>
    }
</div>
