@model IEnumerable<Coupon>

@{
    ViewData["Title"] = "Coupons";
}

<style>
    .coupon {
        border-radius: 12px;
        box-shadow: 5px 8px 10px #d6d5d533;
    }
</style>

<div class="container py-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-12 mb-4">
            <div class="card coupon shadow">
                <a asp-action="Create" asp-controller="Coupon" class="d-flex justify-content-center align-items-center h-100 text-decoration-none">
                    <div class="text-center mt-3 ml-2">
                        <i class="fas fa-plus fa-2x"></i>
                        <p class="mt-2">Add New Coupon</p>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <a asp-action="Details" asp-controller="Coupon" asp-route-id="@item.Id">
                    <div class="card coupon">
                        <div class="row no-gutters">
                            <div class="col-md-4 border-right">
                                <div class="d-flex flex-column align-items-center">
                                    <div class="card-body text-center">
                                        @if (item.Packages.Any())
                                        {
                                            @foreach (var package in item.Packages)
                                            {
                                                <span class="d-block"><strong>@package.Name</strong></span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="d-block"><strong>No Packages</strong></span>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <div class="d-flex flex-row justify-content-end off">
                                        <h3> -@item.DiscountAmount.ToString("F3") DT</h3><span>OFF</span>
                                    </div>
                                    <div class="d-flex flex-row justify-content-between off px-3 p-2">
                                        <span>Promo code:</span><span class="border border-success px-3 rounded code">@item.Code</span>
                                    </div>
                                    <div class="d-flex justify-content-end mt-3">
                                        <form asp-action="Edit" asp-route-id="@item.Id" method="get">
                                            <button type="submit" class="btn btn-primary">Edit</button>
                                        </form>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this coupon?');">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
