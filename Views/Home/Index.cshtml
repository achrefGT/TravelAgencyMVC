    <style>
        .destination-item {
            position: relative;
            overflow: hidden;
            width: 300px; /* Set a fixed width for the square */
            height: 300px; /* Set a fixed height for the square */
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px; /* Space below each destination item */
        }

        .destination-img-container {
            width: 100%;
            height: 100%;
            position: relative;
        }

        .destination-img {
            width: 100%;
            height: 90%;
            object-fit: cover; /* Ensure the image covers the entire card */
            transition: transform 0.3s ease;
        }

        .destination-item:hover .destination-img {
            transform: scale(1.1);
        }

        .destination-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            color: white;
            opacity: 0;
            transition: opacity 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 20px;
            box-sizing: border-box;
        }

        .destination-item:hover .destination-overlay {
            opacity: 1;
        }

        .destination-content {
            z-index: 1;
        }

        .destination-title {
            margin-top: 10px;
            text-align: center;
            width: 100%;
        }
    </style>
