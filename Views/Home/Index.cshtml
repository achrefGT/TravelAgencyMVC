                <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;">Destinations</h6>
                <h1>Tours & Travel Destinations</h1>
            </div>
            <div class="row justify-content-center">
                @if(Model.Any())
                {
                    @foreach (var destination in Model)
                    {
                        <div class="col-lg-4 col-md-6 mb-4 d-flex justify-content-center">
                            <div class="destination-item bg-white text-center mb-2">
                                <img src="@destination.ImageUrl" alt="@destination.Name" class="destination-img">
                                <div class="destination-overlay">
                                    <div>
                                        <p class="m-0">@destination.Description</p>
                                        <p class="m-0 pt-3">Location: @destination.Country</p>
                                    </div>
                                </div>
                                <h5 class="destination-title mb-4">@destination.Name</h5>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center">
